@model Arity.Data.Dto.InvoiceEntry
<form>
    @Html.HiddenFor(_ => _.InvoiceId)
    @Html.HiddenFor(_ => _.InvoiceParticularId)
    @Html.HiddenFor(_ => _.CreatedDate)
    @Html.HiddenFor(_ => _.CreatedBy)

    <div class="form-example-int form-horizental">
        <div class="form-group">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <label class="hrzn-fm">Company<span style="color:red;vertical-align:text-bottom;">*</span></label>
                </div>
                <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12 @(Model.CompanyId > 0?"no-rights":"")">
                    <div class="nk-int-st">
                        @Html.DropDownListFor(_ => _.CompanyId, ViewBag.company as SelectList, "-- Select Company--", new { @class = "form-control input-sm bk-choosen", @required = "required" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-example-int form-horizental">
        <div class="form-group">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <label class="hrzn-fm">Client<span style="color:red;vertical-align:text-bottom;">*</span></label>
                </div>
                <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12 @(Model.CompanyId > 0?"no-rights":"")">
                    <div class="nk-int-st">
                        @Html.DropDownListFor(_ => _.ClientId, ViewBag.Client as SelectList, "-- Select Client--", new { @class = "form-control input-sm bk-choosen", @required = "required" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-example-int form-horizental">
        <div class="form-group">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <label class="hrzn-fm">Particular<span style="color:red;vertical-align:text-bottom;">*</span></label>
                </div>
                <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12 cls-particular @(Model.ParticularId > 0?"no-rights":"")">
                    <div class="nk-int-st">
                        @Html.DropDownListFor(_ => _.ParticularId, ViewBag.Particular as SelectList, "-- Select Particular--", new { @class = "form-control input-sm bk-choosen", @required = "required" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-example-int form-horizental">
        <div class="form-group">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <label class="hrzn-fm">Amount<span style="color:red;vertical-align:text-bottom;">*</span></label>
                </div>
                <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                    <div class="nk-int-st">
                        @Html.TextBoxFor(_ => _.Amount, new { @class = "form-control input-sm", placeholder = "Enter amount", @required = "required", @type = "number" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-example-int form-horizental">
        <div class="form-group">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <label class="hrzn-fm">Year<span style="color:red;vertical-align:text-bottom;">*</span></label>
                </div>
                <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                    <div class="nk-int-st">
                        @Html.DropDownListFor(_ => _.Year, ViewBag.Year as SelectList, "-- Select year--", new { @class = "form-control input-sm", @required = "required" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-example-int form-horizental">
        <div class="form-group ">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <label class="hrzn-fm">Invoice Date<span style="color:red;vertical-align:text-bottom;">*</span></label>
                </div>
                <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12 nk-datapk-ctm form-elet-mg filter-date @(Model.CompanyId > 0?"no-rights":"")">
                    <div class="nk-int-st date">
                        @Html.TextBox("InvoiceDate", Model.InvoiceDate.ToString("dd/MM/yyyy"), new { @class = "form-control input-sm bk-date", placeholder = "Select invoice date" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-example-int form-horizental">
        <div class="form-group ">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <label class="hrzn-fm">Remarks<span style="color:red;vertical-align:text-bottom;"></span></label>
                </div>
                <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12 nk-datapk-ctm form-elet-mg filter-date">
                    <div class="nk-int-st date">
                        @Html.TextAreaFor(_ => _.Remarks, new { @cols = 2, @class = "form-control input-sm", placeholder = "Enter remarks" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="width:100%;text-align:center;padding: 25px 0 5px;">
        <button id="btnAdd" class="btn btn-success notika-btn-success waves-effect" type="button" style="align-content:center">@(Model.InvoiceParticularId > 0 ? "Update" : "Add")</button>
        <button id="btnCancel" class="btn btn-default notika-btn-default waves-effect" type="button" style="margin-left:10px;">Cancel</button>
    </div>
</form>

<script>
    $('.bk-date').datepicker({
                   todayBtn: "linked",
                   keyboardNavigation: false,
                   forceParse: false,
                   calendarWeeks: true,
                   autoclose: true,
                   format: "dd/mm/yyyy"
    });

    $('.bk-date').change(function () {
        var dateStr = $(`#${this.id}`).val();
        var validDate = moment(dateStr, 'DD/MM/YYYY');
        if (dateStr != '' && !validDate.isValid()) {
            $(`#${this.id}`).val('');
        }
    });

    $(".bk-choosen").chosen();
    $("#btnAdd").click(function () {
        var isValid = true;
        if ($("#CompanyId").val() == null || $("#CompanyId").val() == "") {
            Notification('', 'Please select Company', 'danger');
            isValid = false;
        }
        else if ($("#ClientId").val() == null || $("#ClientId").val() == "") {
            Notification('', 'Please select client', 'danger');
            isValid = false;
        }
        else if($("#ParticularId").val() == null || $("#ParticularId").val() == "") {
            Notification('', 'Please select particular', 'danger');
            isValid = false;
        }
         else if($("#Amount").val() == null || $("#Amount").val() == ""  || $("#Amount").val() <= "0") {
            Notification('', 'Please enter amount', 'danger');
            isValid = false;
        }
        else if($("#Year").val() == null || $("#Year").val() == "") {
            Notification('', 'Please enter year', 'danger');
            isValid = false;
        }
        else if ($("#InvoiceDate").val() == null || $("#InvoiceDate").val() == "") {
            Notification('', 'Please select invoie date', 'danger');
            isValid = false;
        }

        var data = JSON.stringify({
            "invoiceEntry": {
                "CompanyId": $("#CompanyId").val(),
                "ClientId": $("#ClientId").val(),
                "ParticularId": $("#ParticularId").val(),
                "Amount": $("#Amount").val(),
                "Year": $("#Year").val(),
                "InvoiceId": $("#InvoiceId").val(),
                "CreatedDate": $("#CreatedDate").val(),
                "InvoiceParticularId": $("#InvoiceParticularId").val(),
                "CreatedBy": $("#CreatedBy").val(),
                "InvoiceDate": $("#InvoiceDate").val(),
                "Remarks": $("#Remarks").val()
            }
        });

        if (isValid) {
            $.ajax({
                url: '@Url.Action("AddInvoiceEntry", "Home")',
                dataType: "json",
                type: "POST",
                data:data,
                cache: false,
                contentType: 'application/json; charset=utf-8',
                success: function (response) {
                    $("#loading").hide();
                    if (response) {
                        if (@Model.InvoiceId <= 0) {
                            Notification('', 'Invoice entry added successfuly', 'success');
                            table.ajax.reload();
                            $("#InvoiceId").val(response.InvoiceId);
                             $("#ParticularId").val("");
                            $("#Amount").val("");
                            $("#Year").val("");
                            $("#InvoiceParticularId").val(0);
                            $("#CreatedBy").val(response.CreatedBy);
                            $("#CreatedDate").val(response.CreatedDate);
                            $("#btnAdd").html("Add Entry");
                            $("#CompanyId, #ClientId, #InvoiceDate").parent().parent().addClass("no-rights");
                            //$("#modelInvoiceEntry").modal('toggle');
                        }
                        else {
                            if (@Model.InvoiceParticularId <= 0) {
                                   Notification('', 'Invoice entry added successfuly', 'success');
                            }
                            else {
                                Notification('', 'Invoice entry updated successfuly', 'success');
                            }
                            $("#ParticularId").val("");
                            $("#Amount").val("");
                            $("#Year").val("");
                            $("#InvoiceParticularId").val(0);
                            $(".cls-particular").removeClass("no-rights");
                            $("#btnAdd").html("Add");
                        }

                    }
                    else {
                         Notification('', 'Something went wrong, Please try again', 'danger');
                    }
                },
                error: function (error) {
                    $("#loading").hide();
                    Notification('', 'Something went wrong, Please try again', 'danger');
                }
            });
        }
    });

    $("#CompanyId").on('change', function () {
        $.ajax({
            url: '@Url.Action("GetClientByCompany", "Home")',
            dataType: "json",
            type: "GET",
            data: {companyId:$("#CompanyId").val()},
            cache: false,
            contentType: 'application/json; charset=utf-8',
            success: function (response) {
                $("#ClientId").html("<option value>-- select client --</option>");
                $.each(response, function (i, client) {
                    $("#ClientId").append($("<option />").val(client.Id).text(client.FullName));
                });
                $(".bk-choosen").trigger("chosen:updated");
            },
            error: function () {

            },
        });
    });
</script>
