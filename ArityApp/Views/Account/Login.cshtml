    <!-- main JS
        ============================================ -->
    <script src="~/Content/js/main.js"></script>
    <script src="/Content/js/notification/bootstrap-growl.min.js"></script>
    <script src="/Content/js/notification/notification-active.js"></script>

    @if (ViewBag.PasswordChangedMessage != null)
    {
        <script>Notification("", "@ViewBag.PasswordChangedMessage", "success")</script>
    }
    <script>


        $("#emailsubmit").on("click", function () {
            $("#lblEmailError").hide();
            if ($("#Email").val() == "") {
                $("#lblEmailError").show();
                return false;
            }
           $.ajax({
                url: "@Url.Action("ForgotPassword", "Account")",
                type: "POST",
                data: { "EmailID": $("#Email").val() },
                datatype: "json",
               success: function (response) {
                   if (response.Status) {
                       Notification("", "Reset password link has been sent to your email account.", "success")
                   } else {
                       Notification("", "This Email is not registered.", "danger")
                   }
               },
               error: function (data) {
                   Notification("", "Internal error occured, Please try again.", "danger")
               }
        });
        });
    </script>
</body>

